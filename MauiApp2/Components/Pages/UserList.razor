@page "/users"

@layout MainLayout

@using MauiApp2.Services

@using MauiApp2.Models

@inject IAuthService AuthService

@inject IUserService UserService

@inject IRoleService RoleService

@inject NavigationManager Navigation

<link href="css/userlist.css" rel="stylesheet" />
<link href="css/pagination.css" rel="stylesheet" />

<div class="dashboard-wrapper">

    <Sidebar />

    <div class="main-content">

        <div class="content-header" style="flex-direction: column; align-items: flex-start;">
            <h1>User Management</h1>
            <p style="color: #6b7280; margin-top: 4px; margin-bottom: 0;">Manage user accounts, roles, and access permissions</p>
        </div>

        <div class="inventory-section">

            <div class="product-table-container">

                <!-- Alert Messages -->
                @if (!string.IsNullOrEmpty(errorMessage))

                {

                    <div class="alert alert-error">

                        <span class="alert-icon"><i class="fas fa-exclamation-triangle"></i></span>

                        <span>@errorMessage</span>

                        <button class="alert-close" @onclick="ClearErrorMessage"><i class="fas fa-times"></i></button>

                    </div>

                }

                <div class="toolbar">

                    <button class="add-item-btn" @onclick="ShowAddModal">
                        <i class="fas fa-plus"></i>
                        <span>Add User</span>
                    </button>

                    <div class="search-container">

                        <input type="text"
                               class="search-input"
                               placeholder="Search users by name, username, or email..."
                               value="@searchQuery"
                               @oninput="OnSearchInput" />
                        <span class="search-icon"><i class="fas fa-search"></i></span>

                    </div>

                </div>

                <div class="table-wrapper">
                    <table class="product-table">

                    <thead>

                        <tr>

                            <th>User ID</th>

                            <th>Full Name</th>

                            <th>Username</th>

                            <th>Email</th>

                            <th>Role</th>

                            <th>Status</th>

                            <th>Last Login</th>

                            <th>Actions</th>

                        </tr>

                    </thead>

                    <tbody>

                        @if (PaginatedUsers.Any())

                        {

                            @foreach (var user in PaginatedUsers)

                            {

                                <tr>

                                    <td>@user.user_id</td>

                                    <td>@user.full_name</td>

                                    <td>@user.username</td>

                                    <td>@user.email</td>

                                    <td>

                                        <span class="status-badge role-badge">@GetRoleName(user.role_id)</span>

                                    </td>

                                    <td>

                                        <span class="status-badge @(user.is_active ? "active" : "inactive")">

                                            @(user.is_active ? "Active" : "Inactive")

                                        </span>

                                    </td>

                                    <td>@(user.last_login?.ToString("MMM dd, yyyy HH:mm") ?? "Never")</td>

                                    <td>

                                        <button class="edit-btn" @onclick="() => ShowEditModal(user)" title="Edit User">

                                            Edit

                                        </button>

                                    </td>

                                </tr>

                            }

                        }

                        else

                        {

                            <tr>

                                <td colspan="8" class="empty-state-cell">

                                    <div class="empty-state">
                                        <i class="fas fa-users empty-state-icon"></i>
                                        <p class="empty-state-text">
                                            @if (string.IsNullOrWhiteSpace(searchQuery))
                                            {
                                                <text>No users found. Click "Add User" to create your first user.</text>
                                            }
                                            else
                                            {
                                                <text>No users match your search criteria.</text>
                                            }
                                        </p>
                                    </div>

                                </td>

                            </tr>

                        }

                    </tbody>

                    </table>
                </div>

                <!-- Mobile Card View -->
                <div class="product-cards-container">
                    @if (PaginatedUsers.Any())
                    {
                        @foreach (var user in PaginatedUsers)
                        {
                            <div class="product-card">
                                <div class="product-card-header">
                                    <h3 class="product-card-title">@user.full_name</h3>
                                    <span class="status-badge @(user.is_active ? "active" : "inactive")">
                                        @(user.is_active ? "Active" : "Inactive")
                                    </span>
                                </div>
                                <div class="product-card-body">
                                    <div class="product-info-group">
                                        <span class="product-info-label">User ID</span>
                                        <span class="product-info-value">@user.user_id</span>
                                    </div>
                                    <div class="product-info-group">
                                        <span class="product-info-label">Username</span>
                                        <span class="product-info-value">@user.username</span>
                                    </div>
                                    <div class="product-info-group">
                                        <span class="product-info-label">Email</span>
                                        <span class="product-info-value">@user.email</span>
                                    </div>
                                    <div class="product-info-group">
                                        <span class="product-info-label">Role</span>
                                        <span class="product-info-value">
                                            <span class="status-badge role-badge">@GetRoleName(user.role_id)</span>
                                        </span>
                                    </div>
                                    <div class="product-info-group">
                                        <span class="product-info-label">Last Login</span>
                                        <span class="product-info-value">@(user.last_login?.ToString("MMM dd, yyyy HH:mm") ?? "Never")</span>
                                    </div>
                                </div>
                                <div class="product-card-footer">
                                    <button class="btn-icon" @onclick="() => ShowEditModal(user)" title="Edit User">
                                        <i class="fas fa-edit"></i>
                                        <span>Edit</span>
                                    </button>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-users empty-state-icon"></i>
                            <p class="empty-state-text">
                                @if (string.IsNullOrWhiteSpace(searchQuery))
                                {
                                    <text>No users found. Click "Add User" to create your first user.</text>
                                }
                                else
                                {
                                    <text>No users match your search criteria.</text>
                                }
                            </p>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (FilteredUsers.Any())

                {

                    <Pagination CurrentPage="@currentPage"
                                PageSize="@pageSize"
                                TotalItems="@FilteredUsers.Count()"
                                PageChanged="@OnPageChanged"
                                PageSizeChanged="@OnPageSizeChanged" />

                }
            </div>

        </div>

    </div>

</div>

<!-- Add User Modal -->
@if (showAddModal)

{

    <div class="modal-overlay">

        <div class="modal-content" @onclick:stopPropagation="true">

            <div class="modal-header">

                <h3>Add New User</h3>

                <button class="modal-close" @onclick="ShowCancelAddModal"><i class="fas fa-times"></i></button>

            </div>

            <div class="modal-body">


                @if (!string.IsNullOrEmpty(modalErrorMessage))

                {

                    <div class="alert alert-error" style="margin-bottom: 20px;">

                        <span class="alert-icon"><i class="fas fa-exclamation-triangle"></i></span>

                        <span>@modalErrorMessage</span>

                        <button class="alert-close" @onclick="ClearModalError"><i class="fas fa-times"></i></button>

                    </div>

                }

                @if (!string.IsNullOrEmpty(rolesErrorMessage))

                {

                    <div class="alert alert-error" style="margin-bottom: 20px;">

                        <span class="alert-icon"><i class="fas fa-exclamation-triangle"></i></span>

                        <span>@rolesErrorMessage</span>

                    </div>

                }

                <div class="form-container">

                    <div class="form-group">

                        <label>Full Name *</label>

                        <input type="text"
                               class="form-control @(hasAttemptedSubmit && HasError("FullName") ? "input-error" : "")"
                               @bind="newFullName"
                               placeholder="Enter full name"
                               maxlength="100" />

                        @if (hasAttemptedSubmit && HasError("FullName"))

                        {

                            <span class="field-error">@GetError("FullName")</span>

                        }

                    </div>

                    <div class="form-group">

                        <label>Username *</label>

                        <input type="text"
                               class="form-control @(hasAttemptedSubmit && HasError("Username") ? "input-error" : "")"
                               @bind="newUsername"
                               placeholder="Enter username"
                               maxlength="50" />

                        @if (hasAttemptedSubmit && HasError("Username"))

                        {

                            <span class="field-error">@GetError("Username")</span>

                        }

                    </div>

                    <div class="form-group">

                        <label>Email *</label>

                        <input type="email"
                               class="form-control @(hasAttemptedSubmit && HasError("Email") ? "input-error" : "")"
                               @bind="newEmail"
                               placeholder="Enter email address"
                               maxlength="100" />

                        @if (hasAttemptedSubmit && HasError("Email"))

                        {

                            <span class="field-error">@GetError("Email")</span>

                        }

                    </div>

                    <div class="form-group">

                        <label>Password *</label>

                        <input type="password"
                               class="form-control @(hasAttemptedSubmit && HasError("Password") ? "input-error" : "")"
                               @bind="newPassword"
                               placeholder="Enter password (min 12 chars, uppercase, number, special char)"
                               maxlength="100" />

                        @if (hasAttemptedSubmit && HasError("Password"))

                        {

                            <span class="field-error">@GetError("Password")</span>

                        }

                        <small class="form-help">Must be at least 12 characters with uppercase, number, and special character</small>

                    </div>

                    <div class="form-group">

                        <label>Confirm Password *</label>

                        <input type="password"
                               class="form-control @(hasAttemptedSubmit && HasError("ConfirmPassword") ? "input-error" : "")"
                               @bind="newConfirmPassword"
                               placeholder="Confirm password"
                               maxlength="100" />

                        @if (hasAttemptedSubmit && HasError("ConfirmPassword"))

                        {

                            <span class="field-error">@GetError("ConfirmPassword")</span>

                        }

                    </div>

                    <div class="form-group">

                        <label>Role *</label>

                        @if (availableRoles == null || !availableRoles.Any())

                        {

                            <select class="form-control input-error" disabled>

                                <option>No roles available in database</option>

                            </select>

                            <span class="field-error">Please add roles to the database first</span>

                        }

                        else

                        {

                            <select class="form-control @(hasAttemptedSubmit && HasError("Role") ? "input-error" : "")"
                                    @bind="newRoleId">

                                <option value="0">Select Role</option>

                                @foreach (var role in availableRoles)

                                {

                                    <option value="@role.role_id">@role.role_name</option>

                                }

                            </select>

                            @if (hasAttemptedSubmit && HasError("Role"))

                            {

                                <span class="field-error">@GetError("Role")</span>

                            }

                        }

                    </div>

                </div>

            </div>

            <div class="modal-footer">

                <button class="btn-cancel" @onclick="ShowCancelAddModal">Cancel</button>

                <button class="btn-submit" @onclick="ShowAddUserConfirmation" disabled="@(isAddingUser || availableRoles == null || !availableRoles.Any() || !CanSubmitAddForm())">

                    @if (isAddingUser)

                    {

                        <span>Adding...</span>

                    }

                    else

                    {

                        <span>Add User</span>

                    }

                </button>

            </div>

        </div>

    </div>

}

