    private bool IsValidPassword(string password)

    {

        if (string.IsNullOrWhiteSpace(password))

            return false;

        if (password.Length < 12)

            return false;

        bool hasUpper = password.Any(char.IsUpper);

        bool hasNumber = password.Any(char.IsDigit);

        bool hasSpecial = password.Any(ch => !char.IsLetterOrDigit(ch));

        return hasUpper && hasNumber && hasSpecial;

    }

    // Email validation

    private bool IsValidEmail(string email)

    {

        try

        {

            var addr = new System.Net.Mail.MailAddress(email);

            return addr.Address == email;

        }

        catch

        {

            return false;

        }

    }

    // Validation Methods

    private void ValidateAddForm()

    {

        validationErrors.Clear();

        if (string.IsNullOrWhiteSpace(newFullName))

            AddValidationError("FullName", "Full name is required");

        else if (newFullName.Length < 2)

            AddValidationError("FullName", "Full name must be at least 2 characters long");

        if (string.IsNullOrWhiteSpace(newUsername))

            AddValidationError("Username", "Username is required");

        else if (newUsername.Length < 3)

            AddValidationError("Username", "Username must be at least 3 characters long");

        else if (users.Any(u => u.username.Equals(newUsername, StringComparison.OrdinalIgnoreCase)))

            AddValidationError("Username", "Username already exists");

        if (string.IsNullOrWhiteSpace(newEmail))

            AddValidationError("Email", "Email is required");

        else if (!IsValidEmail(newEmail))

            AddValidationError("Email", "Please enter a valid email address");

        else if (users.Any(u => u.email.Equals(newEmail, StringComparison.OrdinalIgnoreCase)))

            AddValidationError("Email", "Email already exists");

        if (string.IsNullOrWhiteSpace(newPassword))

            AddValidationError("Password", "Password is required");

        else if (!IsValidPassword(newPassword))

            AddValidationError("Password", "Password must be at least 12 characters with uppercase, number, and special character");

        if (string.IsNullOrWhiteSpace(newConfirmPassword))

            AddValidationError("ConfirmPassword", "Confirm password is required");

        else if (newPassword != newConfirmPassword)

            AddValidationError("ConfirmPassword", "Passwords do not match");

        if (newRoleId == 0)

            AddValidationError("Role", "Role is required");

    }

    private void ValidateEditForm()

    {

        editValidationErrors.Clear();

        if (string.IsNullOrWhiteSpace(editFullName))

            AddEditValidationError("FullName", "Full name is required");

        else if (editFullName.Length < 2)

            AddEditValidationError("FullName", "Full name must be at least 2 characters long");

        if (string.IsNullOrWhiteSpace(editUsername))

            AddEditValidationError("Username", "Username is required");

        else if (editUsername.Length < 3)

            AddEditValidationError("Username", "Username must be at least 3 characters long");

        else if (users.Any(u => u.username.Equals(editUsername, StringComparison.OrdinalIgnoreCase) && u.user_id != editingUser?.user_id))

            AddEditValidationError("Username", "Username already exists");

        if (string.IsNullOrWhiteSpace(editEmail))

            AddEditValidationError("Email", "Email is required");

        else if (!IsValidEmail(editEmail))

            AddEditValidationError("Email", "Please enter a valid email address");

        else if (users.Any(u => u.email.Equals(editEmail, StringComparison.OrdinalIgnoreCase) && u.user_id != editingUser?.user_id))

            AddEditValidationError("Email", "Email already exists");

        if (editRoleId == 0)

            AddEditValidationError("Role", "Role is required");

    }

