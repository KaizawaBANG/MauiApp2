    private async Task AddUser()

    {

        // Prevent double submission

        if (isAddingUser)

            return;

        // Set loading state

        isAddingUser = true;

        StateHasChanged();

        try

        {

            var newUser = new MauiApp2.Models.User

            {

                role_id = newRoleId,

                username = newUsername.Trim(),

                email = newEmail.Trim().ToLower(),

                full_name = newFullName.Trim(),

                is_active = true,

                created_date = DateTime.Now

            };

            await UserService.CreateUserAsync(newUser, newPassword);

            // Success - close modal and show success message

            successMessage = $"User '{newUser.full_name}' added successfully!";

            await LoadUsers();

            CloseAddModal();

            // Clear search to show new user

            searchQuery = "";

            currentPage = 1;

            await Task.Delay(100);
            showSuccessModal = true;

            StateHasChanged();

        }

        catch (ArgumentException ex)

        {

            // Handle validation errors from service

            modalErrorMessage = $"Validation error: {ex.Message}";

            StateHasChanged();

        }

        catch (InvalidOperationException ex)

        {

            // Handle business logic errors

            modalErrorMessage = $"Cannot add user: {ex.Message}";

            StateHasChanged();

        }

        catch (Exception ex)

        {

            // Handle unexpected errors

            modalErrorMessage = $"Error adding user: {ex.Message}";

            Console.WriteLine($"AddUser error: {ex}");

            StateHasChanged();

        }

        finally

        {

            isAddingUser = false;

            StateHasChanged();

        }

    }

