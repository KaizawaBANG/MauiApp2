    private string GetError(string field)

    {

        var error = validationErrors.FirstOrDefault(error => error.StartsWith($"{field}|"));
        if (string.IsNullOrEmpty(error))
            return "";

        var parts = error.Split('|', 2);
        return parts.Length > 1 ? parts[1] : "";

