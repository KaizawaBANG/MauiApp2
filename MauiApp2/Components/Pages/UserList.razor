@code {

    private string searchQuery = "";

    private List<MauiApp2.Models.User> users = new();

    private List<Role> availableRoles = new();

    private bool showAddModal = false;

    private bool showEditModal = false;

    private bool showAddUserConfirmation = false;

    private bool showUpdateUserConfirmation = false;

    private bool showCancelAddModal = false;

    private bool showCancelEditModal = false;

    private bool showSuccessModal = false;

    private MauiApp2.Models.User? editingUser = null;

    private string rolesErrorMessage = "";

    private bool isAddingUser = false; // Loading state for Add User button

    // Pagination

    private int currentPage = 1;

    private int pageSize = 10;

    // Add form fields

    private string newFullName = "";

    private string newUsername = "";

    private string newEmail = "";

    private string newPassword = "";

    private string newConfirmPassword = "";

    private int newRoleId = 0;

    // Edit form fields

    private string editFullName = "";

    private string editUsername = "";

    private string editEmail = "";

    private int editRoleId = 0;

    private bool editIsActive = true;

    // Messages and validation

    private string errorMessage = "";

    private string successMessage = "";

    private string modalErrorMessage = ""; // Error message specific to modal

    private List<string> validationErrors = new List<string>();

    private List<string> editValidationErrors = new List<string>();

    private bool hasAttemptedSubmit = false; // Track if user has attempted to submit

    protected override async Task OnInitializedAsync()

    {
        // Check if user is Administrator
        if (AuthService == null || !IsAdministrator())
        {
            Navigation.NavigateTo("/dashboard");
            return;
        }

        await LoadDataAsync();

    }

    // Check if user is Administrator
    private bool IsAdministrator()
    {
        if (AuthService == null)
            return false;

        string userRole = (AuthService.CurrentUserRoleName ?? "").Trim();
        return userRole.Equals("Administrator", StringComparison.OrdinalIgnoreCase);
    }

    private async Task LoadDataAsync()

    {

        try

        {

            // Load roles first from database

            await LoadRoles();

            // Then load users

            await LoadUsers();

        }

        catch (Exception ex)

        {

            errorMessage = $"Error loading data: {ex.Message}";

            Console.WriteLine($"LoadDataAsync error: {ex}");

        }

        StateHasChanged();

    }

    private async Task LoadUsers()

    {

        try

        {

            if (UserService == null)

            {

                errorMessage = "UserService is not available. Please check service registration.";

                Console.WriteLine("UserService is null");

                users = new List<MauiApp2.Models.User>();

                return;

            }

            users = await UserService.GetUsersAsync();

            if (users == null)

            {

                users = new List<MauiApp2.Models.User>();

            }

        }

        catch (Exception ex)

        {

            errorMessage = $"Error loading users: {ex.Message}";

            Console.WriteLine($"LoadUsers error: {ex}");

            users = new List<MauiApp2.Models.User>();

        }

    }

    private async Task LoadRoles()

    {

        try

        {

            rolesErrorMessage = ""; // Clear previous error



            if (RoleService == null)

            {

                rolesErrorMessage = "RoleService is not available. Please check service registration.";

                Console.WriteLine("RoleService is null");

                availableRoles = new List<Role>();

                StateHasChanged();

                return;

            }

            // Load roles FROM DATABASE via RoleService

            availableRoles = await RoleService.GetRolesAsync();



            if (availableRoles == null)

