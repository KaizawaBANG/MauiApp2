{
    <div class="modal-overlay" style="z-index: 3000; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); display: flex; align-items: center; justify-content: center;">
        <div class="modal-content" style="background: white; border-radius: 12px; padding: 0; max-width: 500px; width: 90%;" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>Confirm Update Brand</h3>
                <button class="modal-close" @onclick="CloseUpdateBrandConfirmation"><i class="fas fa-times"></i></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning" style="margin-bottom: 20px;">
                    <i class="fas fa-exclamation-triangle"></i>
                    <span>Are you sure you want to update this brand?</span>
                </div>
                <div style="padding: 15px; background-color: #f9fafb; border-radius: 8px; margin-bottom: 15px;">
                    <p><strong>Brand Code:</strong> @(string.IsNullOrWhiteSpace(editBrandCode) ? "N/A" : editBrandCode.ToUpper())</p>
                    <p><strong>Brand Name:</strong> @editBrandName</p>
                    <p><strong>Description:</strong> @(string.IsNullOrWhiteSpace(editDescription) ? "N/A" : editDescription)</p>
                </div>
                <p style="color: #6b7280; font-size: 0.875rem;">This action will permanently update the brand information.</p>
            </div>
            <div class="modal-footer">
                <button class="btn-cancel" @onclick="CloseUpdateBrandConfirmation">Cancel</button>
                <button class="btn-submit" @onclick="ConfirmUpdateBrand">Confirm Update</button>
            </div>
        </div>
    </div>
}

