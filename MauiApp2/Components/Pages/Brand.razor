@code {

    private string searchQuery = "";

    private List<MauiApp2.Models.Brand> brands = new();

    private bool showAddModal = false;

    private bool showEditModal = false;

    private bool showAddBrandConfirmation = false;

    private bool showUpdateBrandConfirmation = false;

    private bool showCancelAddModal = false;

    private bool showCancelEditModal = false;

    private bool showSuccessModal = false;

    private string successModalMessage = "";

    private MauiApp2.Models.Brand? editingBrand = null;

    private bool isLoading = false;

    // Track submit attempts for validation display

    private bool hasAttemptedSubmit = false;

    private bool hasAttemptedEditSubmit = false;

    // Add form fields

    private string newBrandCode = "";

    private string newBrandName = "";

    private string newDescription = "";

    // Edit form fields

    private string editBrandCode = "";

    private string editBrandName = "";

    private string editDescription = "";

    // Messages and validation

    private string errorMessage = "";

    private string successMessage = "";

    private List<string> validationErrors = new List<string>();

    private List<string> editValidationErrors = new List<string>();

    // Pagination

    private int currentPage = 1;

    private int pageSize = 10;

    protected override async Task OnInitializedAsync()

    {

        await LoadBrands();

    }

    private async Task LoadBrands()

    {

        try

        {

            isLoading = true;

            errorMessage = "";

            StateHasChanged();

            var loadedBrands = await BrandService.GetBrandsAsync();
            if (loadedBrands == null)
            {
                brands = new List<MauiApp2.Models.Brand>();
            }
            else
            {
                // Sort by brand_id in ascending order
                brands = loadedBrands.OrderBy(b => b.brand_id).ToList();
            }

        }

        catch (Exception ex)

        {

            errorMessage = $"Error loading brands: {ex.Message}";

            Console.WriteLine($"Error: {ex.Message}");

        }

        finally

        {

            isLoading = false;

            StateHasChanged();

        }

    }

    private IEnumerable<MauiApp2.Models.Brand> FilteredBrands

    {

        get

        {

            IEnumerable<MauiApp2.Models.Brand> result;
            if (string.IsNullOrWhiteSpace(searchQuery))
                result = brands;
            else
                result = brands.Where(b =>

                    b.brand_name.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||

                    (b.brand_code != null && b.brand_code.Contains(searchQuery, StringComparison.OrdinalIgnoreCase)) ||

                    (b.description != null && b.description.Contains(searchQuery, StringComparison.OrdinalIgnoreCase)) ||

                    b.brand_id.ToString().Contains(searchQuery, StringComparison.OrdinalIgnoreCase));

            // Sort by brand_id in ascending order
            return result.OrderBy(b => b.brand_id);

        }

    }

    private IEnumerable<MauiApp2.Models.Brand> PaginatedBrands

    {

        get

        {

            var filtered = FilteredBrands.ToList();

            return filtered.Skip((currentPage - 1) * pageSize).Take(pageSize);

        }

    }

    private void OnPageChanged(int page)

    {

        currentPage = page;

        StateHasChanged();

    }

    private void OnPageSizeChanged(int newPageSize)

    {

        pageSize = newPageSize;

        currentPage = 1;

        StateHasChanged();

    }

    private void OnSearchInput(ChangeEventArgs e)

    {

        searchQuery = e.Value?.ToString() ?? "";

        currentPage = 1;

    }

    // Modal Methods

    private void ShowAddModal()

    {

        showAddModal = true;

        hasAttemptedSubmit = false; // Reset submit attempt flag

        ClearMessages();

        ResetAddForm();

        StateHasChanged();

    }

    private void ShowCancelAddModal()
    {
        showCancelAddModal = true;
        StateHasChanged();
    }

    private void CloseCancelAddModal()
    {
        showCancelAddModal = false;
        StateHasChanged();
    }

    private void ConfirmCancelAddModal()
    {
        showCancelAddModal = false;
        CloseAddModal();
    }

    private void CloseAddModal()

    {

        showAddModal = false;

        hasAttemptedSubmit = false; // Reset submit attempt flag

        ResetAddForm();

        StateHasChanged();

    }

    private void ShowEditModal(MauiApp2.Models.Brand brand)

    {

        editingBrand = brand;

        showEditModal = true;

        hasAttemptedEditSubmit = false; // Reset submit attempt flag

        ClearMessages();

        // Populate edit form

        editBrandCode = brand.brand_code ?? "";

        editBrandName = brand.brand_name;

        editDescription = brand.description ?? "";

        StateHasChanged();

    }

    private void ShowCancelEditModal()
    {
        showCancelEditModal = true;
        StateHasChanged();
    }

    private void CloseCancelEditModal()
    {
        showCancelEditModal = false;
        StateHasChanged();
    }

    private void ConfirmCancelEditModal()
    {
        showCancelEditModal = false;
        CloseEditModal();
    }

    private void CloseEditModal()

    {

        showEditModal = false;

        editingBrand = null;

        hasAttemptedEditSubmit = false; // Reset submit attempt flag

        ResetEditForm();

        StateHasChanged();

    }

    private void CloseSuccessModal()
    {
        showSuccessModal = false;
        successModalMessage = "";
        StateHasChanged();
    }

    // Form Methods

    private void ResetAddForm()

    {

        newBrandCode = "";

        newBrandName = "";

        newDescription = "";

        validationErrors.Clear();

        hasAttemptedSubmit = false;

    }

    private void ResetEditForm()

    {

        editBrandCode = "";

        editBrandName = "";

        editDescription = "";

        editValidationErrors.Clear();

        hasAttemptedEditSubmit = false;

    }

    private void ClearMessages()

    {

        errorMessage = "";

        successMessage = "";

        validationErrors.Clear();

        editValidationErrors.Clear();

    }

    private void ClearErrorMessage() => errorMessage = "";

    private void ClearSuccessMessage() => successMessage = "";

    // Validation Methods

    private void ValidateAddForm()

    {

        validationErrors.Clear();

        if (string.IsNullOrWhiteSpace(newBrandName))

            AddValidationError("BrandName", "Brand name is required");

        else if (newBrandName.Trim().Length < 2)

            AddValidationError("BrandName", "Brand name must be at least 2 characters long");

        else if (brands.Any(b => b.brand_name.Equals(newBrandName.Trim(), StringComparison.OrdinalIgnoreCase)))

            AddValidationError("BrandName", "Brand name already exists");

        // Validate code if provided

        if (!string.IsNullOrWhiteSpace(newBrandCode))

        {

            var code = newBrandCode.Trim().ToUpper();

            if (code.Length > 10)

            {

                AddValidationError("BrandCode", "Brand code must be 10 characters or less");

            }

            else if (brands.Any(b => b.brand_code != null && b.brand_code.Equals(code, StringComparison.OrdinalIgnoreCase)))

            {

                AddValidationError("BrandCode", "Brand code already exists");

            }

        }

    }

    private void ValidateEditForm()

    {

        editValidationErrors.Clear();

        if (string.IsNullOrWhiteSpace(editBrandName))

            AddEditValidationError("BrandName", "Brand name is required");

        else if (editBrandName.Trim().Length < 2)

            AddEditValidationError("BrandName", "Brand name must be at least 2 characters long");

        else if (brands.Any(b => b.brand_name.Equals(editBrandName.Trim(), StringComparison.OrdinalIgnoreCase) && b.brand_id != editingBrand?.brand_id))

            AddEditValidationError("BrandName", "Brand name already exists");

        // Validate code if provided

        if (!string.IsNullOrWhiteSpace(editBrandCode))

        {

            var code = editBrandCode.Trim().ToUpper();

            if (code.Length > 10)

            {

                AddEditValidationError("BrandCode", "Brand code must be 10 characters or less");

            }

            else if (brands.Any(b => b.brand_code != null && b.brand_code.Equals(code, StringComparison.OrdinalIgnoreCase) && b.brand_id != editingBrand?.brand_id))

            {

                AddEditValidationError("BrandCode", "Brand code already exists");

            }

        }

    }

    private void AddValidationError(string field, string message)

    {

        validationErrors.Add($"{field}: {message}");

    }

    private void AddEditValidationError(string field, string message)

    {

        editValidationErrors.Add($"{field}: {message}");

    }

