@page "/brands"

@layout MainLayout

@using MauiApp2.Services

@using MauiApp2.Models

@using Microsoft.JSInterop

@inject IAuthService AuthService

@inject NavigationManager Navigation

@inject IBrandService BrandService

@inject IJSRuntime JSRuntime

<link href="css/brand.css" rel="stylesheet" />

<link href="css/pagination.css" rel="stylesheet" />

<div class="dashboard-wrapper">

    <Sidebar />

    <div class="main-content">

        <div class="content-header">

            <h1>Brand Management</h1>

        </div>

        <div class="inventory-section">

            <div class="tab-section">

                <div class="tabs">

                    <button class="tab active">Brand List</button>

                </div>

            </div>

            <div class="product-table-container">

                <!-- Alert Messages -->
                @if (!string.IsNullOrEmpty(errorMessage))

                {

                    <div class="alert alert-error">

                        <span class="alert-icon"><i class="fas fa-exclamation-triangle"></i></span>

                        <span>@errorMessage</span>

                        <button class="alert-close" @onclick="ClearErrorMessage"><i class="fas fa-times"></i></button>

                    </div>

                }

                @if (!string.IsNullOrEmpty(successMessage))

                {

                    <div class="alert alert-success">

                        <span class="alert-icon"><i class="fas fa-check-circle"></i></span>

                        <span>@successMessage</span>

                        <button class="alert-close" @onclick="ClearSuccessMessage"><i class="fas fa-times"></i></button>

                    </div>

                }

                <!-- Loading Indicator -->
                @if (isLoading)

                {

                    <div class="loading-indicator">

                        <div class="spinner"></div>

                        <span>Loading brands...</span>

                    </div>

                }

                <div class="toolbar">

                    <button class="add-item-btn" @onclick="ShowAddModal" disabled="@isLoading">
                        <i class="fas fa-plus"></i>
                        <span>Add Brand</span>
                    </button>

                    <div class="search-container">

                        <input type="text"
                               class="search-input"
                               placeholder="Search brands..."
                               value="@searchQuery"
                               @oninput="OnSearchInput"
                               disabled="@isLoading" />

                        <span class="search-icon"><i class="fas fa-search"></i></span>

                    </div>

                </div>

                <div class="table-wrapper">
                    <table class="product-table">

                    <thead>

                        <tr>

                            <th>Code</th>

                            <th>Brand Name</th>

                            <th>Description</th>

                            <th>Actions</th>

                        </tr>

                    </thead>

                    <tbody>

                        @if (PaginatedBrands.Any())

                        {

                            @foreach (var brand in PaginatedBrands)

                            {

                                <tr>

                                    <td><strong>@(brand.brand_code ?? "N/A")</strong></td>

                                    <td>@brand.brand_name</td>

                                    <td>

                                        @if (!string.IsNullOrEmpty(brand.description))

                                        {

                                            <span>@brand.description</span>

                                        }

                                        else

                                        {

                                            <span style="color: #9ca3af; font-style: italic;">No description</span>

                                        }

                                    </td>

                                    <td>

                                        <button class="edit-btn"
                                                @onclick="() => ShowEditModal(brand)"
                                                disabled="@isLoading">
                                            <i class="fas fa-edit"></i>
                                            <span>Edit</span>
                                        </button>

                                    </td>

                                </tr>

                            }

                        }

                        else if (!isLoading)

                        {

                            <tr>

                                <td colspan="4" class="empty-state-cell">
                                    <div class="empty-state">
                                        <i class="fas fa-tag empty-state-icon"></i>
                                        @if (string.IsNullOrWhiteSpace(searchQuery))
                                        {
                                            <p class="empty-state-text">No brands found. Click "Add Brand" to add your first brand.</p>
                                        }
                                        else
                                        {
                                            <p class="empty-state-text">No brands match your search criteria.</p>
                                        }
                                    </div>
                                </td>

                            </tr>

                        }

                    </tbody>

                    </table>
                </div>

                <!-- Mobile Card View -->
                <div class="brand-cards-container">
                    @if (PaginatedBrands.Any())
                    {
                        @foreach (var brand in PaginatedBrands)
                        {
                            <div class="brand-card">
                                <div class="brand-card-header">
                                    <div>
                                        <h3 class="brand-card-title">@brand.brand_name</h3>
                                        <span class="brand-card-code">@(brand.brand_code ?? "N/A")</span>
                                    </div>
                                    <button class="edit-btn" @onclick="() => ShowEditModal(brand)" disabled="@isLoading">
                                        <i class="fas fa-edit"></i>
                                        <span>Edit</span>
                                    </button>
                                </div>
                                <div class="brand-card-body">
                                    <div class="brand-info-group">
                                        <span class="brand-info-label">Description</span>
                                        <span class="brand-info-value">
                                            @if (!string.IsNullOrEmpty(brand.description))
                                            {
                                                @brand.description
                                            }
                                            else
                                            {
                                                <span style="color: #9ca3af; font-style: italic;">No description</span>
                                            }
                                        </span>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else if (!isLoading)
                    {
                        <div class="empty-state">
                            <i class="fas fa-tag empty-state-icon"></i>
                            @if (string.IsNullOrWhiteSpace(searchQuery))
                            {
                                <p class="empty-state-text">No brands found. Click "Add Brand" to add your first brand.</p>
                            }
                            else
                            {
                                <p class="empty-state-text">No brands match your search criteria.</p>
                            }
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (FilteredBrands.Any())

                {

                    <Pagination CurrentPage="@currentPage"
                                PageSize="@pageSize"
                                TotalItems="@FilteredBrands.Count()"
                                PageChanged="@OnPageChanged"
                                PageSizeChanged="@OnPageSizeChanged" />

                }

            </div>

        </div>

    </div>

</div>

<!-- Add Brand Modal -->
@if (showAddModal)

{

    <div class="brand-modal-overlay">

        <div class="brand-modal-content" @onclick:stopPropagation="true">

            <div class="brand-modal-header">

                <h3>Add New Brand</h3>

                <button class="modal-close" @onclick="ShowCancelAddModal"><i class="fas fa-times"></i></button>

            </div>

            <div class="brand-modal-body">

                <!-- Validation Summary - Only show after submit attempt -->

                <div class="brand-form-container">

                    <div class="brand-form-group">

                        <label>Brand Code</label>

                        <input type="text"
                               class="brand-form-control @(hasAttemptedSubmit && HasError("BrandCode") ? "input-error" : "")"
                               @bind="newBrandCode"
                               @bind:event="oninput"
                               placeholder="Auto-generated if left empty (max 3 chars)"
                               maxlength="10"
                               style="text-transform: uppercase;"
                               disabled="@isLoading" />

                        <small style="color: #6b7280; font-size: 0.875rem;">Leave empty to auto-generate from name</small>

                        @if (hasAttemptedSubmit && HasError("BrandCode"))

                        {

                            <span class="brand-field-error">@GetError("BrandCode")</span>

                        }

                    </div>

                    <div class="brand-form-group">

                        <label>Brand Name *</label>

                        <input type="text"
                               class="brand-form-control @(hasAttemptedSubmit && HasError("BrandName") ? "input-error" : "")"
                               @bind="newBrandName"
                               placeholder="Enter brand name"
                               maxlength="100"
                               disabled="@isLoading" />

                        @if (hasAttemptedSubmit && HasError("BrandName"))

                        {

                            <span class="brand-field-error">@GetError("BrandName")</span>

                        }

                    </div>

                    <div class="brand-form-group">

                        <label>Description</label>

                        <textarea class="brand-form-control brand-textarea"
                                  @bind="newDescription"
                                  placeholder="Enter brand description (optional)"
                                  maxlength="500"
                                  rows="4"
                                  disabled="@isLoading"></textarea>

                        <div class="character-count">

                            @newDescription.Length/500 characters

                        </div>

                    </div>

                </div>

            </div>

            <div class="brand-modal-footer">

                <button class="brand-btn-cancel" @onclick="ShowCancelAddModal" disabled="@isLoading">Cancel</button>

                <button class="brand-btn-submit" @onclick="ShowAddBrandConfirmation" disabled="@isLoading">

                    @if (isLoading)

                    {

                        <span class="button-spinner"></span>

                    }

                    Add Brand

                </button>

            </div>

        </div>

    </div>

}

<!-- Edit Brand Modal -->
@if (showEditModal && editingBrand != null)

{

    <div class="brand-modal-overlay">

        <div class="brand-modal-content" @onclick:stopPropagation="true">

            <div class="brand-modal-header">

                <h3>Edit Brand</h3>

                <button class="modal-close" @onclick="ShowCancelEditModal"><i class="fas fa-times"></i></button>

            </div>

            <div class="brand-modal-body">


                <div class="brand-form-container">

                    <div class="brand-form-group">

                        <label>Brand Code</label>

                        <input type="text"
                               class="brand-form-control @(hasAttemptedEditSubmit && HasEditError("BrandCode") ? "input-error" : "")"
                               @bind="editBrandCode"
                               @bind:event="oninput"
                               placeholder="Brand code (max 10 chars)"
                               maxlength="10"
                               style="text-transform: uppercase;"
                               disabled="@isLoading" />

                        @if (hasAttemptedEditSubmit && HasEditError("BrandCode"))

                        {

                            <span class="brand-field-error">@GetEditError("BrandCode")</span>

                        }

                    </div>

                    <div class="brand-form-group">

                        <label>Brand Name *</label>

                        <input type="text"
                               class="brand-form-control @(hasAttemptedEditSubmit && HasEditError("BrandName") ? "input-error" : "")"
                               @bind="editBrandName"
                               placeholder="Enter brand name"
                               maxlength="100"
                               disabled="@isLoading" />

                        @if (hasAttemptedEditSubmit && HasEditError("BrandName"))

                        {

                            <span class="brand-field-error">@GetEditError("BrandName")</span>

                        }

                    </div>

                    <div class="brand-form-group">

                        <label>Description</label>

                        <textarea class="brand-form-control brand-textarea"
                                  @bind="editDescription"
                                  placeholder="Enter brand description (optional)"
                                  maxlength="500"
                                  rows="4"
                                  disabled="@isLoading"></textarea>

                        <div class="character-count">

                            @editDescription.Length/500 characters

                        </div>

                    </div>

                </div>

            </div>

            <div class="brand-modal-footer">

                <button class="brand-btn-cancel" @onclick="ShowCancelEditModal" disabled="@isLoading">Cancel</button>

                <button class="brand-btn-submit" @onclick="ShowUpdateBrandConfirmation" disabled="@isLoading">

                    @if (isLoading)

                    {

                        <span class="button-spinner"></span>

                    }

                    Update Brand

                </button>

            </div>

        </div>

    </div>

}

<!-- Confirmation Modal for Add Brand -->
@if (showAddBrandConfirmation)
{
    <div class="modal-overlay confirmation-modal-overlay">
        <div class="modal-content confirmation-modal" @onclick:stopPropagation="true">
            <div class="modal-header confirmation-modal-header">
                <h3>Confirm Add Brand</h3>
                <button class="modal-close" @onclick="CloseAddBrandConfirmation"><i class="fas fa-times"></i></button>
            </div>
            <div class="modal-body confirmation-modal-body">
                <div class="confirmation-message-box">
                    <p class="confirmation-question">Are you sure you want to add this brand?</p>
                </div>
                <div class="confirmation-details">
                    <div class="confirmation-detail-item">
                        <span class="confirmation-label">Brand Code:</span>
                        <span class="confirmation-value code-value">@(string.IsNullOrWhiteSpace(newBrandCode) ? "N/A" : newBrandCode.ToUpper())</span>
                    </div>
                    <div class="confirmation-detail-item">
                        <span class="confirmation-label">Brand Name:</span>
                        <span class="confirmation-value">@newBrandName</span>
                    </div>
                    <div class="confirmation-detail-item">
                        <span class="confirmation-label">Description:</span>
                        <span class="confirmation-value">@(string.IsNullOrWhiteSpace(newDescription) ? "N/A" : newDescription)</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer confirmation-modal-footer">
                <button class="btn-cancel" @onclick="CloseAddBrandConfirmation">Cancel</button>
                <button class="btn-submit confirmation-submit-btn" @onclick="ConfirmAddBrand">Confirm Add</button>
            </div>
        </div>
    </div>
}

<!-- Confirmation Modal for Update Brand -->
