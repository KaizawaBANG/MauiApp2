@page "/taxes"

@layout MainLayout

@using MauiApp2.Services

@using MauiApp2.Models

@using TaxModel = MauiApp2.Models.Tax

@using Microsoft.JSInterop

@inject IAuthService AuthService

@inject NavigationManager Navigation

@inject ITaxService TaxService

@inject IJSRuntime JSRuntime

<link href="css/tax.css" rel="stylesheet" />

<link href="css/pagination.css" rel="stylesheet" />

<div class="dashboard-wrapper">

    <Sidebar />

    <div class="main-content">

        <div class="content-header">

            <h1>Tax Management</h1>

        </div>

        <div class="inventory-section">

            <div class="tab-section">

                <div class="tabs">

                    <button class="tab active">Tax List</button>

                </div>

            </div>

            <div class="product-table-container">

                <!-- Alert Messages -->
                @if (!string.IsNullOrEmpty(errorMessage))

                {

                    <div class="alert alert-error">

                        <span class="alert-icon"><i class="fas fa-exclamation-triangle"></i></span>

                        <span>@errorMessage</span>

                        <button class="alert-close" @onclick="ClearErrorMessage"><i class="fas fa-times"></i></button>

                    </div>

                }

                @if (!string.IsNullOrEmpty(successMessage))

                {

                    <div class="alert alert-success">

                        <span class="alert-icon"><i class="fas fa-check-circle"></i></span>

                        <span>@successMessage</span>

                        <button class="alert-close" @onclick="ClearSuccessMessage"><i class="fas fa-times"></i></button>

                    </div>

                }

                <!-- Loading Indicator -->
                @if (isLoading)

                {

                    <div class="loading-indicator">

                        <div class="spinner"></div>

                        <span>Loading taxes...</span>

                    </div>

                }

                <div class="toolbar">

                    <button class="add-item-btn" @onclick="ShowAddModal" disabled="@isLoading">
                        <i class="fas fa-plus"></i>
                        <span>Add Tax</span>
                    </button>

                    <div class="search-container">

                        <input type="text"
                               class="search-input"
                               placeholder="Search taxes..."
                               value="@searchQuery"
                               @oninput="OnSearchInput"
                               disabled="@isLoading" />

                        <span class="search-icon"><i class="fas fa-search"></i></span>

                    </div>

                </div>

                <div class="table-wrapper">
                    <table class="product-table">

                    <thead>

                        <tr>

                            <th>Tax Name</th>

                            <th>Tax Type</th>

                            <th>Tax Rate (%)</th>

                            <th>Status</th>

                            <th>Actions</th>

                        </tr>

                    </thead>

                    <tbody>

                        @if (PaginatedTaxes.Any())

                        {

                            @foreach (var tax in PaginatedTaxes)

                            {

                                <tr>

                                    <td>@tax.tax_name</td>

                                    <td>@tax.tax_type</td>

                                    <td>@((tax.tax_rate * 100).ToString("N2"))%</td>

                                    <td>
                                        <span class="status-badge @(tax.is_active ? "active" : "inactive")">
                                            @(tax.is_active ? "Active" : "Inactive")
                                        </span>
                                    </td>

                                    <td>
                                        <button class="edit-btn"
                                                @onclick="() => ShowEditModal(tax)"
                                                disabled="@isLoading">
                                            <i class="fas fa-edit"></i>
                                            <span>Edit</span>
                                        </button>
                                    </td>

                                </tr>

                            }

                        }

                        else if (!isLoading)

                        {

                            <tr>

                                <td colspan="5" class="empty-state-cell">
                                    <div class="empty-state">
                                        <i class="fas fa-receipt empty-state-icon"></i>
                                        @if (string.IsNullOrWhiteSpace(searchQuery))
                                        {
                                            <p class="empty-state-text">No taxes found. Click "Add Tax" to add your first tax.</p>
                                        }
                                        else
                                        {
                                            <p class="empty-state-text">No taxes match your search criteria.</p>
                                        }
                                    </div>
                                </td>

                            </tr>

                        }

                    </tbody>

                    </table>
                </div>

                <!-- Mobile Card View -->
                <div class="tax-cards-container">
                    @if (PaginatedTaxes.Any())
                    {
                        @foreach (var tax in PaginatedTaxes)
                        {
                            <div class="tax-card">
                                <div class="tax-card-header">
                                    <div>
                                        <h3 class="tax-card-title">@tax.tax_name</h3>
                                        <span class="tax-card-type">@tax.tax_type</span>
                                    </div>
                                    <button class="edit-btn" @onclick="() => ShowEditModal(tax)" disabled="@isLoading">
                                        <i class="fas fa-edit"></i>
                                        <span>Edit</span>
                                    </button>
                                </div>
                                <div class="tax-card-body">
                                    <div class="tax-info-group">
                                        <span class="tax-info-label">Tax Rate</span>
                                        <span class="tax-info-value rate-value">@((tax.tax_rate * 100).ToString("N2"))%</span>
                                    </div>
                                    <div class="tax-info-group">
                                        <span class="tax-info-label">Status</span>
                                        <span class="tax-info-value"><span class="status-badge @(tax.is_active ? "active" : "inactive")">@(tax.is_active ? "Active" : "Inactive")</span></span>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else if (!isLoading)
                    {
                        <div class="empty-state">
                            <i class="fas fa-receipt empty-state-icon"></i>
                            @if (string.IsNullOrWhiteSpace(searchQuery))
                            {
                                <p class="empty-state-text">No taxes found. Click "Add Tax" to add your first tax.</p>
                            }
                            else
                            {
                                <p class="empty-state-text">No taxes match your search criteria.</p>
                            }
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (FilteredTaxes.Any())

                {

                    <Pagination CurrentPage="@currentPage"
                                PageSize="@pageSize"
                                TotalItems="@FilteredTaxes.Count()"
                                PageChanged="@OnPageChanged"
                                PageSizeChanged="@OnPageSizeChanged" />

                }

            </div>

        </div>

    </div>

</div>

<!-- Add Tax Modal -->
@if (showAddModal)

{

    <div class="tax-modal-overlay">

        <div class="tax-modal-content" @onclick:stopPropagation="true">

            <div class="tax-modal-header">

                <h3>Add New Tax</h3>

                <button class="modal-close" @onclick="ShowCancelAddModal"><i class="fas fa-times"></i></button>

            </div>

            <div class="tax-modal-body">

                <!-- Validation Summary - Only show after submit attempt -->

                <div class="tax-form-container">

                    <div class="tax-form-group">

                        <label>Tax Name *</label>

                        <input type="text"
                               class="tax-form-control @(hasAttemptedSubmit && HasError("TaxName") ? "input-error" : "")"
                               @bind="newTaxName"
                               placeholder="Enter tax name (e.g., VAT)"
                               maxlength="100"
                               disabled="@isLoading" />

                        @if (hasAttemptedSubmit && HasError("TaxName"))

                        {

                            <span class="tax-field-error">@GetError("TaxName")</span>

                        }

                    </div>

                    <div class="tax-form-group">

                        <label>Tax Type *</label>

                        <select class="tax-form-control @(hasAttemptedSubmit && HasError("TaxType") ? "input-error" : "")"
                                @bind="newTaxType"
                                disabled="@isLoading">

                            <option value="">Select Tax Type</option>

                            <option value="VAT">VAT (Value Added Tax)</option>

                            <option value="Zero Rated">Zero Rated</option>

                            <option value="Exempt">Exempt</option>

                        </select>

                        @if (hasAttemptedSubmit && HasError("TaxType"))

                        {

                            <span class="tax-field-error">@GetError("TaxType")</span>

                        }

                        <small class="tax-help-text">Select the tax type applicable in the Philippines</small>

                    </div>

                    <div class="tax-form-group">

                        <label>Tax Rate (%) *</label>

                        <input type="number"
                               class="tax-form-control @(hasAttemptedSubmit && HasError("TaxRate") ? "input-error" : "")"
                               @bind="newTaxRatePercent"
                               @bind:event="oninput"
                               step="0.01"
                               min="0"
                               max="100"
                               placeholder="Enter tax rate (e.g., 12 for 12%)"
                               disabled="@isLoading" />

                        @if (hasAttemptedSubmit && HasError("TaxRate"))

                        {

                            <span class="tax-field-error">@GetError("TaxRate")</span>

                        }

                        <small class="tax-help-text">Enter percentage (e.g., 12 for 12% VAT in Philippines)</small>

                    </div>

                </div>

            </div>

            <div class="tax-modal-footer">

                <button class="tax-btn-cancel" @onclick="ShowCancelAddModal" disabled="@isLoading">Cancel</button>

                <button class="tax-btn-submit" @onclick="ShowAddTaxConfirmation" disabled="@isLoading">

                    @if (isLoading)

                    {

                        <span class="button-spinner"></span>

                    }

                    Add Tax

                </button>

            </div>

        </div>

    </div>

}

