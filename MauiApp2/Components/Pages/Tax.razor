    private async Task AddTax()

    {

        try

        {

            isLoading = true;

            StateHasChanged();

            var newTax = new TaxModel

            {

                tax_name = newTaxName.Trim(),

                tax_type = newTaxType.Trim(),

                tax_rate = newTaxRatePercent / 100, // Convert percentage (12) to decimal (0.12)

                is_active = newIsActive,

                created_date = DateTime.Now

            };

            var taxId = await TaxService.CreateTaxAsync(newTax);

            // Refresh the list
            await LoadTaxes();

            // Close modal
            CloseAddModal();
            CloseAddTaxConfirmation();

