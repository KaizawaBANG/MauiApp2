    {

        if (editingTax == null)

        {

            errorMessage = "Error: No tax selected for editing.";

            StateHasChanged();

            return;

        }

        try

        {

            isLoading = true;

            StateHasChanged();

            var updatedTax = new TaxModel

            {

                tax_id = editingTax.tax_id,

                tax_name = editTaxName.Trim(),

                tax_type = editTaxType.Trim(),

                tax_rate = editTaxRatePercent / 100, // Convert percentage (12) to decimal (0.12)

                is_active = editIsActive,

                created_date = editingTax.created_date

            };

            var success = await TaxService.UpdateTaxAsync(updatedTax);

            if (success)

            {

                // Refresh the list
                await LoadTaxes();

                // Close modal
                CloseEditModal();
                CloseUpdateTaxConfirmation();

                await Task.Delay(100);

                // Show success modal
                successModalMessage = $"Tax '{editTaxName}' updated successfully!";
                showSuccessModal = true;
                StateHasChanged();

            }

            else

            {

                errorMessage = "Failed to update tax. Please try again.";

            }

        }

        catch (Exception ex)

        {

            errorMessage = $"Error updating tax: {ex.Message}";

        }

        finally

        {

            isLoading = false;

            StateHasChanged();

        }

    }

    private async Task DeleteTax(int taxId)

    {

        var taxToDelete = taxes.FirstOrDefault(t => t.tax_id == taxId);

        if (taxToDelete == null) return;

        if (!await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete tax '{taxToDelete.tax_name}'?"))

            return;

        try

        {

            isLoading = true;

            StateHasChanged();

            var success = await TaxService.DeleteTaxAsync(taxId);

            if (success)

            {

                successMessage = $"Tax '{taxToDelete.tax_name}' deleted successfully!";

                await LoadTaxes(); // Refresh the list

            }

            else

            {

                errorMessage = "Failed to delete tax. Please try again.";

            }

        }

        catch (Exception ex)

        {

            errorMessage = $"Error deleting tax: {ex.Message}";

        }

        finally

        {

            isLoading = false;

            StateHasChanged();

        }

    }

