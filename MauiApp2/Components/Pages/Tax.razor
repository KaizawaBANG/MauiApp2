@code {

    private string searchQuery = "";

    private List<TaxModel> taxes = new();

    private bool showAddModal = false;

    private bool showEditModal = false;

    private bool showAddTaxConfirmation = false;

    private bool showUpdateTaxConfirmation = false;

    private bool showCancelAddModal = false;

    private bool showCancelEditModal = false;

    private bool showSuccessModal = false;

    private string successModalMessage = "";

    private TaxModel? editingTax = null;

    private bool isLoading = false;

    // Track submit attempts for validation display

    private bool hasAttemptedSubmit = false;

    private bool hasAttemptedEditSubmit = false;

    // Add form fields

    private string newTaxName = "";

    private string newTaxType = "";

    private decimal newTaxRatePercent = 0;

    private bool newIsActive = true;

    // Edit form fields

    private string editTaxName = "";

    private string editTaxType = "";

    private decimal editTaxRatePercent = 0;

    private bool editIsActive = true;

    // Messages and validation

    private string errorMessage = "";

    private string successMessage = "";

    private List<string> validationErrors = new List<string>();

    private List<string> editValidationErrors = new List<string>();

    // Pagination

    private int currentPage = 1;

    private int pageSize = 10;

    protected override async Task OnInitializedAsync()

    {

        await LoadTaxes();

    }

    private async Task LoadTaxes()

    {

        try

        {

            isLoading = true;

            errorMessage = "";

            StateHasChanged();

            var loadedTaxes = await TaxService.GetTaxesAsync();
            if (loadedTaxes == null)
            {
                taxes = new List<TaxModel>();
            }
            else
            {
                // Sort by tax_id in ascending order
                taxes = loadedTaxes.OrderBy(t => t.tax_id).ToList();
            }

        }

        catch (Exception ex)

        {

            errorMessage = $"Error loading taxes: {ex.Message}";

            Console.WriteLine($"Error: {ex.Message}");

        }

        finally

        {

            isLoading = false;

            StateHasChanged();

        }

    }

    private IEnumerable<TaxModel> FilteredTaxes

    {

        get

        {

            IEnumerable<TaxModel> result;
            if (string.IsNullOrWhiteSpace(searchQuery))
                result = taxes;
            else
                result = taxes.Where(t =>

                    t.tax_name.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||

                    t.tax_type.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||

                    t.tax_id.ToString().Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||

                    (t.tax_rate * 100).ToString().Contains(searchQuery, StringComparison.OrdinalIgnoreCase));

            // Sort by tax_id in ascending order
            return result.OrderBy(t => t.tax_id);

        }

    }

    private IEnumerable<TaxModel> PaginatedTaxes

    {

        get

        {

            var filtered = FilteredTaxes.ToList();

            return filtered.Skip((currentPage - 1) * pageSize).Take(pageSize);

        }

    }

    private void OnPageChanged(int page)

    {

        currentPage = page;

        StateHasChanged();

    }

    private void OnPageSizeChanged(int newPageSize)

    {

        pageSize = newPageSize;

        currentPage = 1;

        StateHasChanged();

    }

    private void OnSearchInput(ChangeEventArgs e)

    {

        searchQuery = e.Value?.ToString() ?? "";

        currentPage = 1;

    }

    private void OnNewStatusChanged(ChangeEventArgs e)

    {

        newIsActive = e.Value?.ToString()?.ToLower() == "true";

    }

    private void OnEditStatusChanged(ChangeEventArgs e)

    {

        editIsActive = e.Value?.ToString()?.ToLower() == "true";

    }

    // Modal Methods

    private void ShowAddModal()

    {

        showAddModal = true;

        hasAttemptedSubmit = false; // Reset submit attempt flag

        ClearMessages();

        ResetAddForm();

        StateHasChanged();

    }

    private void ShowCancelAddModal()
    {
        showCancelAddModal = true;
        StateHasChanged();
    }

    private void CloseCancelAddModal()
    {
        showCancelAddModal = false;
        StateHasChanged();
    }

    private void ConfirmCancelAddModal()
    {
        showCancelAddModal = false;
        CloseAddModal();
    }

    private void CloseAddModal()

    {

        showAddModal = false;

        hasAttemptedSubmit = false; // Reset submit attempt flag

        ResetAddForm();

        StateHasChanged();

    }

    private void ShowEditModal(TaxModel tax)

    {

        editingTax = tax;

        showEditModal = true;

        hasAttemptedEditSubmit = false; // Reset submit attempt flag

        ClearMessages();

        // Populate edit form

        editTaxName = tax.tax_name;

        editTaxType = tax.tax_type;

        editTaxRatePercent = tax.tax_rate * 100; // Convert from decimal (0.12) to percentage (12)

        editIsActive = tax.is_active;

        StateHasChanged();

    }

    private void ShowCancelEditModal()
    {
        showCancelEditModal = true;
        StateHasChanged();
    }

    private void CloseCancelEditModal()
    {
        showCancelEditModal = false;
        StateHasChanged();
    }

    private void ConfirmCancelEditModal()
    {
        showCancelEditModal = false;
        CloseEditModal();
    }

    private void CloseEditModal()

    {

        showEditModal = false;

        editingTax = null;

        hasAttemptedEditSubmit = false; // Reset submit attempt flag

        ResetEditForm();

        StateHasChanged();

    }

    private void CloseSuccessModal()
    {
        showSuccessModal = false;
        successModalMessage = "";
        StateHasChanged();
    }

    // Form Methods

    private void ResetAddForm()

    {

        newTaxName = "";

        newTaxType = "";

        newTaxRatePercent = 0;

        newIsActive = true;

        validationErrors.Clear();

        hasAttemptedSubmit = false;

    }

    private void ResetEditForm()

    {

        editTaxName = "";

        editTaxType = "";

        editTaxRatePercent = 0;

        editIsActive = true;

        editValidationErrors.Clear();

        hasAttemptedEditSubmit = false;

    }

    private void ClearMessages()

    {

        errorMessage = "";

        successMessage = "";

        validationErrors.Clear();

        editValidationErrors.Clear();

    }

    private void ClearErrorMessage() => errorMessage = "";

    private void ClearSuccessMessage() => successMessage = "";

    // Validation Methods

    private void ValidateAddForm()

    {

        validationErrors.Clear();

        if (string.IsNullOrWhiteSpace(newTaxName))

            AddValidationError("TaxName", "Tax name is required");

        else if (newTaxName.Trim().Length < 2)

            AddValidationError("TaxName", "Tax name must be at least 2 characters long");

        else if (taxes.Any(t => t.tax_name.Equals(newTaxName.Trim(), StringComparison.OrdinalIgnoreCase)))

            AddValidationError("TaxName", "Tax name already exists");

        if (string.IsNullOrWhiteSpace(newTaxType))

            AddValidationError("TaxType", "Tax type is required");

        if (newTaxRatePercent < 0)

            AddValidationError("TaxRate", "Tax rate cannot be negative");

        else if (newTaxRatePercent > 100)

            AddValidationError("TaxRate", "Tax rate cannot exceed 100%");

    }

    private void ValidateEditForm()

    {

        editValidationErrors.Clear();

        if (string.IsNullOrWhiteSpace(editTaxName))

            AddEditValidationError("TaxName", "Tax name is required");

        else if (editTaxName.Trim().Length < 2)

            AddEditValidationError("TaxName", "Tax name must be at least 2 characters long");

        else if (taxes.Any(t => t.tax_name.Equals(editTaxName.Trim(), StringComparison.OrdinalIgnoreCase) && t.tax_id != editingTax?.tax_id))

            AddEditValidationError("TaxName", "Tax name already exists");

        if (string.IsNullOrWhiteSpace(editTaxType))

            AddEditValidationError("TaxType", "Tax type is required");

        if (editTaxRatePercent < 0)

            AddEditValidationError("TaxRate", "Tax rate cannot be negative");

        else if (editTaxRatePercent > 100)

            AddEditValidationError("TaxRate", "Tax rate cannot exceed 100%");

    }

    private void AddValidationError(string field, string message)

    {

        validationErrors.Add($"{field}: {message}");

    }

    private void AddEditValidationError(string field, string message)

    {

        editValidationErrors.Add($"{field}: {message}");

    }

    private bool HasError(string field)

    {

        return validationErrors.Any(error => error.StartsWith($"{field}:"));

    }

    private bool HasEditError(string field)

    {

        return editValidationErrors.Any(error => error.StartsWith($"{field}:"));

    }

    private string GetError(string field)

    {

        return validationErrors.FirstOrDefault(error => error.StartsWith($"{field}:"))?.Split(':')[1]?.Trim() ?? "";

    }

    private string GetEditError(string field)

    {

        return editValidationErrors.FirstOrDefault(error => error.StartsWith($"{field}:"))?.Split(':')[1]?.Trim() ?? "";

    }

    private bool IsFormValid

    {

        get

        {

            // Only validate if user has attempted to submit

            if (!hasAttemptedSubmit)

                return true;

            ValidateAddForm();

            return validationErrors.Count == 0 && !string.IsNullOrWhiteSpace(newTaxName) && !string.IsNullOrWhiteSpace(newTaxType);

        }

    }

    private bool IsEditFormValid

    {

        get

        {

            // Only validate if user has attempted to submit

            if (!hasAttemptedEditSubmit)

                return true;

            ValidateEditForm();

            return editValidationErrors.Count == 0 && !string.IsNullOrWhiteSpace(editTaxName) && !string.IsNullOrWhiteSpace(editTaxType);

        }

    }

