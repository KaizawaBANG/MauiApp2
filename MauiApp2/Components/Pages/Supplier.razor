@page "/suppliers"

@layout MainLayout

@using MauiApp2.Services

@using MauiApp2.Models

@using SupplierModel = MauiApp2.Models.Supplier

@using Microsoft.JSInterop

@inject IAuthService AuthService

@inject NavigationManager Navigation

@inject ISupplierService SupplierService

@inject IJSRuntime JSRuntime

<link href="css/supplier.css" rel="stylesheet" />

<link href="css/pagination.css" rel="stylesheet" />

<div class="dashboard-wrapper">

    <Sidebar />

    <div class="main-content">

        <div class="content-header">

            <h1>Supplier Management</h1>

        </div>

        <div class="inventory-section">

            <div class="tab-section">

                <div class="tabs">

                    <button class="tab active">Supplier List</button>

                </div>

            </div>

            <div class="product-table-container">

                <!-- Alert Messages -->
                @if (!string.IsNullOrEmpty(errorMessage))

                {

                    <div class="alert alert-error">

                        <span class="alert-icon"><i class="fas fa-exclamation-triangle"></i></span>

                        <span>@errorMessage</span>

                        <button class="alert-close" @onclick="ClearErrorMessage"><i class="fas fa-times"></i></button>

                    </div>

                }

                @if (!string.IsNullOrEmpty(successMessage))

                {

                    <div class="alert alert-success">

                        <span class="alert-icon"><i class="fas fa-check-circle"></i></span>

                        <span>@successMessage</span>

                        <button class="alert-close" @onclick="ClearSuccessMessage"><i class="fas fa-times"></i></button>

                    </div>

                }

                <!-- Loading Indicator -->
                @if (isLoading)

                {

                    <div class="loading-indicator">

                        <div class="spinner"></div>

                        <span>Loading suppliers...</span>

                    </div>

                }

                <div class="toolbar">

                    <button class="add-item-btn" @onclick="ShowAddModal" disabled="@isLoading">
                        <i class="fas fa-plus"></i>
                        <span>Add Supplier</span>
                    </button>

                    <div class="search-container">

                        <input type="text"
                               class="search-input"
                               placeholder="Search suppliers..."
                               value="@searchQuery"
                               @oninput="OnSearchInput"
                               disabled="@isLoading" />

                        <span class="search-icon"><i class="fas fa-search"></i></span>

                    </div>

                </div>

                <div class="table-wrapper">
                    <table class="product-table">

                    <thead>

                        <tr>

                            <th>Supplier Name</th>

                            <th>Contact Number</th>

                            <th>Email</th>

                            <th>Status</th>

                            <th>Created Date</th>

                            <th>Modified Date</th>

                            <th>Actions</th>

                        </tr>

                    </thead>

                    <tbody>

                        @if (PaginatedSuppliers.Any())

                        {

                            @foreach (var supplier in PaginatedSuppliers)

                            {

                                <tr>

                                    <td class="product-name-cell">@supplier.supplier_name</td>

                                    <td>

                                        @if (!string.IsNullOrEmpty(supplier.contact_number))

                                        {

                                            <span>@supplier.contact_number</span>

                                        }

                                        else

                                        {

                                            <span class="no-data">-</span>

                                        }

                                    </td>

                                    <td>

                                        @if (!string.IsNullOrEmpty(supplier.email))

                                        {

                                            <span>@supplier.email</span>

                                        }

                                        else

                                        {

                                            <span class="no-data">-</span>

                                        }

                                    </td>

                                    <td>

                                        <span class="status-badge @(supplier.is_active ? "status-active" : "status-inactive")">

                                            @(supplier.is_active ? "Active" : "Inactive")

                                        </span>

                                    </td>

                                    <td>

                                        @supplier.created_date.ToString("MMM dd, yyyy")

                                    </td>

                                    <td>

                                        @if (supplier.modified_date.HasValue)

                                        {

                                            <span>@supplier.modified_date.Value.ToString("MMM dd, yyyy")</span>

                                        }

                                        else

                                        {

                                            <span class="no-data">-</span>

                                        }

                                    </td>

                                    <td>

                                        <button class="edit-btn"
                                                @onclick="() => ShowEditModal(supplier)"
                                                disabled="@isLoading">
                                            <i class="fas fa-edit"></i>
                                            <span>Edit</span>
                                        </button>

                                    </td>

                                </tr>

                            }

                        }

                        else if (!isLoading)

                        {

                            <tr>

                                <td colspan="7" class="empty-state-cell">
                                    <div class="empty-state">
                                        <i class="fas fa-folder-open empty-state-icon"></i>
                                        @if (string.IsNullOrWhiteSpace(searchQuery))
                                        {
                                            <p class="empty-state-text">No suppliers found. Click "Add Supplier" to add your first supplier.</p>
                                        }
                                        else
                                        {
                                            <p class="empty-state-text">No suppliers match your search criteria.</p>
                                        }
                                    </div>
                                </td>

                            </tr>

                        }

                    </tbody>

                    </table>
                </div>

                <!-- Mobile Card View -->
                <div class="supplier-cards-container">
                    @if (PaginatedSuppliers.Any())
                    {
                        @foreach (var supplier in PaginatedSuppliers)
                        {
                            <div class="supplier-card">
                                <div class="supplier-card-header">
                                    <h3 class="supplier-card-title">@supplier.supplier_name</h3>
                                    <button class="edit-btn" @onclick="() => ShowEditModal(supplier)" disabled="@isLoading">
                                        <i class="fas fa-edit"></i>
                                        <span>Edit</span>
                                    </button>
                                </div>
                                <div class="supplier-card-body">
                                    <div class="supplier-info-group">
                                        <span class="supplier-info-label">Contact Number</span>
                                        <span class="supplier-info-value">@(string.IsNullOrEmpty(supplier.contact_number) ? "—" : supplier.contact_number)</span>
                                    </div>
                                    <div class="supplier-info-group">
                                        <span class="supplier-info-label">Email</span>
                                        <span class="supplier-info-value">@(string.IsNullOrEmpty(supplier.email) ? "—" : supplier.email)</span>
                                    </div>
                                    <div class="supplier-info-group">
                                        <span class="supplier-info-label">Status</span>
                                        <span class="supplier-info-value">
                                            <span class="status-badge @(supplier.is_active ? "status-active" : "status-inactive")">
                                                @(supplier.is_active ? "Active" : "Inactive")
                                            </span>
                                        </span>
                                    </div>
                                    <div class="supplier-info-group">
                                        <span class="supplier-info-label">Created Date</span>
                                        <span class="supplier-info-value">@supplier.created_date.ToString("MMM dd, yyyy")</span>
                                    </div>
                                    @if (supplier.modified_date.HasValue)
                                    {
                                        <div class="supplier-info-group">
                                            <span class="supplier-info-label">Modified Date</span>
                                            <span class="supplier-info-value">@supplier.modified_date.Value.ToString("MMM dd, yyyy")</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else if (!isLoading)
                    {
                        <div class="empty-state">
                            <i class="fas fa-folder-open empty-state-icon"></i>
                            @if (string.IsNullOrWhiteSpace(searchQuery))
                            {
                                <p class="empty-state-text">No suppliers found. Click "Add Supplier" to add your first supplier.</p>
                            }
                            else
                            {
                                <p class="empty-state-text">No suppliers match your search criteria.</p>
                            }
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (FilteredSuppliers.Any())

                {

                    <Pagination CurrentPage="@currentPage"
                                PageSize="@pageSize"
                                TotalItems="@FilteredSuppliers.Count()"
                                PageChanged="@OnPageChanged"
                                PageSizeChanged="@OnPageSizeChanged" />

                }

            </div>

        </div>

    </div>

</div>

<!-- Add Supplier Modal -->
@if (showAddModal)

{

    <div class="modal-overlay">

        <div class="modal-content" @onclick:stopPropagation="true">

            <div class="modal-header">

                <h3>Add New Supplier</h3>

                <button class="modal-close" @onclick="ShowCancelAddModal"><i class="fas fa-times"></i></button>

            </div>

            <div class="modal-body">


                <div class="form-container">

                    <div class="form-group">

                        <label>Supplier Name *</label>

                        <input type="text"
                               class="form-control @(hasAttemptedSubmit && HasError("SupplierName") ? "input-error" : "")"
                               @bind="newSupplierName"
                               placeholder="Enter supplier name"
                               maxlength="100"
                               disabled="@isLoading" />

                        @if (hasAttemptedSubmit && HasError("SupplierName"))

                        {

                            <span class="field-error">@GetError("SupplierName")</span>

                        }

                    </div>

                    <div class="form-group">

                        <label>Contact Number</label>

                        <div class="phone-input-wrapper">

                            <span class="phone-prefix">+63</span>

                            <input type="tel"
                                   class="form-control phone-input"
                                   value="@GetDisplayPhoneNumber(newContactNumber)"
                                   @oninput="(e) => OnNewContactNumberInput(e)"
                                   placeholder="9123456789"
                                   maxlength="10"
                                   disabled="@isLoading" />

                        </div>

                        <small class="form-help">Enter 10 digits (e.g., 9123456789)</small>

                    </div>

                    <div class="form-group">

                        <label>Email</label>

                        <input type="email"
                               class="form-control @(hasAttemptedSubmit && HasError("Email") ? "input-error" : "")"
                               @bind="newEmail"
                               placeholder="Enter email address (optional)"
                               maxlength="100"
                               disabled="@isLoading" />

                        @if (hasAttemptedSubmit && HasError("Email"))

                        {

                            <span class="field-error">@GetError("Email")</span>

                        }

                    </div>

                </div>

            </div>

            <div class="modal-footer">

                <button class="btn-cancel" @onclick="ShowCancelAddModal" disabled="@isLoading">Cancel</button>

                <button class="btn-submit" @onclick="ShowAddSupplierConfirmation" disabled="@isLoading">

                    @if (isLoading)

                    {

                        <span class="button-spinner"></span>

                    }

                    Add Supplier

                </button>

            </div>

        </div>

    </div>

}

