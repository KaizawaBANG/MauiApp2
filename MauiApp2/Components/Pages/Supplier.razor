    // Validation Methods

    private void ValidateAddForm()

    {

        validationErrors.Clear();

        if (string.IsNullOrWhiteSpace(newSupplierName))

            AddValidationError("SupplierName", "Supplier name is required");

        else if (newSupplierName.Trim().Length < 2)

            AddValidationError("SupplierName", "Supplier name must be at least 2 characters long");

        else if (suppliers.Any(s => s.supplier_name.Equals(newSupplierName.Trim(), StringComparison.OrdinalIgnoreCase)))

            AddValidationError("SupplierName", "Supplier name already exists");

        if (!string.IsNullOrWhiteSpace(newEmail) && !IsValidEmail(newEmail))

            AddValidationError("Email", "Please enter a valid email address");

    }

    private void ValidateEditForm()

    {

        editValidationErrors.Clear();

        if (string.IsNullOrWhiteSpace(editSupplierName))

            AddEditValidationError("SupplierName", "Supplier name is required");

        else if (editSupplierName.Trim().Length < 2)

            AddEditValidationError("SupplierName", "Supplier name must be at least 2 characters long");

        else if (suppliers.Any(s => s.supplier_name.Equals(editSupplierName.Trim(), StringComparison.OrdinalIgnoreCase) && s.supplier_id != editingSupplier?.supplier_id))

            AddEditValidationError("SupplierName", "Supplier name already exists");

        if (!string.IsNullOrWhiteSpace(editEmail) && !IsValidEmail(editEmail))

            AddEditValidationError("Email", "Please enter a valid email address");

    }

    private bool IsValidEmail(string email)

    {

        try

        {

            var addr = new System.Net.Mail.MailAddress(email);

            return addr.Address == email;

        }

        catch

        {

            return false;

        }

    }

    private void AddValidationError(string field, string message)

    {

        validationErrors.Add($"{field}: {message}");

    }

    private void AddEditValidationError(string field, string message)

    {

        editValidationErrors.Add($"{field}: {message}");

    }

    private bool HasError(string field)

    {

        return validationErrors.Any(error => error.StartsWith($"{field}:"));

    }

    private bool HasEditError(string field)

    {

        return editValidationErrors.Any(error => error.StartsWith($"{field}:"));

    }

    private string GetError(string field)

    {

        return validationErrors.FirstOrDefault(error => error.StartsWith($"{field}:"))?.Split(':')[1]?.Trim() ?? "";

    }

    private string GetEditError(string field)

    {

        return editValidationErrors.FirstOrDefault(error => error.StartsWith($"{field}:"))?.Split(':')[1]?.Trim() ?? "";

    }

    private bool IsFormValid

    {

        get

        {

            // Only validate if user has attempted to submit

            if (!hasAttemptedSubmit)

                return true;

            ValidateAddForm();

            return validationErrors.Count == 0 && !string.IsNullOrWhiteSpace(newSupplierName);

        }

    }

    private bool IsEditFormValid

    {

        get

        {

            // Only validate if user has attempted to submit

            if (!hasAttemptedEditSubmit)

                return true;

            ValidateEditForm();

            return editValidationErrors.Count == 0 && !string.IsNullOrWhiteSpace(editSupplierName);

        }

    }

